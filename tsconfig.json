{
	"compilerOptions": {
		"outDir": "./dist/",
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"strict": false,
    "pretty": true,
    "allowSyntheticDefaultImports": true,
		"lib": [
			"es2017"
		]
	},
  "exclude": [
    "node_modules"
  ],
  "awesomeTypescriptLoaderOptions": {
    "resolveGlobs": true,
    "useWebpackText": true
  }
}
