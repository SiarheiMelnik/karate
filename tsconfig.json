{
	"compilerOptions": {
		"outDir": "./dist/",
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
		"preserveConstEnums": true,
		"noUnusedLocals": true,
		"removeComments": true,
    "strictNullChecks": true,
		"lib": [
			"es6",
			"es2016"
		]
	},
	"include": [
		"src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
