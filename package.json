{
  "name": "karate",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "lint": "tslint --fix --project tsconfig.json",
    "lint:staged": "lint-staged",
    "test": "jest",
    "postinstall": "lerna bootstrap",
    "format": "prettier --write \"packages/**/*.ts\"",
    "test:watch": "jest --watch",
    "dynamodb:scraper": "lerna run dynamodb --scope karate-scraper",
    "dev:scraper": "lerna run dev --scope karate-scraper --stream",
    "package:scraper": "lerna run package --scope karate-scraper --stream",
    "deploy:scraper": "lerna run deploy --scope karate-scraper --stream",
    "remove:scraper": "lerna run remove --scope karate-scraper --stream"
  },
  "author": "siarhei.m.a@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^21.1.5",
    "@types/node": "^8.0.47",
    "awesome-typescript-loader": "^3.2.3",
    "babili-webpack-plugin": "^0.1.2",
    "jest": "^21.2.1",
    "lerna": "^2.5.1",
    "lint-staged": "^4.3.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.7.4",
    "prettier-tslint": "^0.3.0",
    "serverless": "^1.24.0",
    "serverless-dynamodb-local": "^0.2.26",
    "serverless-offline": "^3.16.0",
    "serverless-plugin-chrome": "^1.0.0-12",
    "serverless-pseudo-parameters": "^1.2.5",
    "serverless-webpack": "3.1.2",
    "ts-jest": "^21.1.4",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.6.0",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.6.1",
    "webpack": "^3.8.1",
    "webpack-node-externals": "^1.6.0"
  },
  "lint-staged": {
    "*.{ts}": [
      "lint",
      "npm run format",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "parser": "typescript",
    "printWidth": 80
  },
  "pre-commit": "lint:staged",
  "jest": {
    "roots": [
      "<rootDir>/packages"
    ],
    "transformIgnorePatterns": [],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
