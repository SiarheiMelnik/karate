{
  "name": "karate",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "lint": "tslint --fix --project tsconfig.json",
    "lint:staged": "lint-staged",
    "test": "jest",
    "prettier": "prettier --config .prettierrc --write \"packages/**/*.ts\"",
    "test:watch": "jest --watch",
    "deploy:scraper": "cd packages/services/scraper && yarn run deploy",
    "remove:scraper": "cd packages/services/scraper && yarn run remove"
  },
  "author": "siarhei.m.a@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "@types/bluebird": "^3.5.12",
    "@types/jest": "^21.1.1",
    "@types/node": "^8.0.31",
    "@types/winston": "^2.3.6",
    "awesome-typescript-loader": "^3.2.3",
    "aws-sdk": "^2.124.0",
    "babili-webpack-plugin": "^0.1.2",
    "jest": "^21.2.1",
    "lint-staged": "^4.2.3",
    "pre-commit": "^1.2.2",
    "prettier": "^1.7.3",
    "serverless-webpack": "3.1.0",
    "ts-jest": "^21.0.1",
    "tslint": "^5.7.0",
    "tslint-config-standard": "^6.0.1",
    "typescript": "^2.5.3",
    "webpack": "^3.6.0",
    "webpack-node-externals": "^1.6.0"
  },
  "workspaces": [
    "packages/services/*"
  ],
  "lint-staged": {
    "*.{ts}": [
      "npm run prettier",
      "lint",
      "git add"
    ]
  },
  "pre-commit": "lint:staged",
  "jest": {
    "roots": [
      "<rootDir>/packages"
    ],
    "transformIgnorePatterns": [],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
