{
  "name": "karate",
  "version": "0.2.0",
  "description": "webscraper",
  "main": "handler.js",
  "scripts": {
    "deploy": "sls deploy",
    "lint": "tslint --fix --project tsconfig.json",
    "lint:staged": "lint-staged",
    "test": "jest",
    "prettier": "prettier --no-semi --single-quote --trailing-comma all --write \"src/**/*.ts\"",
    "test:watch": "jest --watch",
    "upgrade-dependencies": "ncu -a",
    "deploy:scraper": "cd src/services/scraper && sls deploy",
    "remove:scraper": "cd src/services/scraper && sls remove"
  },
  "author": "siarhei.m.a@gmail.com",
  "license": "MIT",
  "dependencies": {
    "@serverless-chrome/lambda": "^1.0.0-5",
    "bluebird": "^3.5.0",
    "chrome-remote-interface": "^0.24.5",
    "uuid": "^3.1.0",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.11",
    "@types/jest": "^20.0.8",
    "@types/node": "^8.0.28",
    "@types/winston": "^2.3.5",
    "awesome-typescript-loader": "^3.2.3",
    "aws-sdk": "^2.117.0",
    "babili-webpack-plugin": "^0.1.2",
    "decompress": "^4.2.0",
    "jest": "^21.1.0",
    "lint-staged": "^4.2.1",
    "npm-check-updates": "^2.12.1",
    "pre-commit": "^1.2.2",
    "prettier": "^1.7.0",
    "serverless-webpack": "3.0.0",
    "ts-jest": "^21.0.1",
    "tslint": "^5.7.0",
    "tslint-config-standard": "^6.0.1",
    "typescript": "^2.5.2",
    "webpack": "^3.6.0",
    "webpack-node-externals": "^1.6.0"
  },
  "lint-staged": {
    "*.{ts}": [
      "prettier --no-semi --single-quote --trailing-comma all --write",
      "lint",
      "git add"
    ]
  },
  "pre-commit": "lint:staged",
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transformIgnorePatterns": [],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
